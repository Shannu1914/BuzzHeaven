<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
  <h2>Reports</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Report ID</th>
        <th>User</th>
        <th>Type</th>
        <th>Description</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% reports.forEach(report => { %>
        <tr>
          <td><%= report._id %></td>
          <td><%= report.user.name %></td>
          <td><%= report.type %></td>
          <td><%= report.description %></td>
          <td><%= report.status %></td>
          <td>
            <a href="/admin/reports/<%= report._id %>/resolve" class="btn btn-success">Resolve</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>

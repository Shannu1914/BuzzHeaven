<%- include('../partials/header', { title: 'Create Post' }) %>
<%- include('../partials/navbar') %>

<div class="container form-card" style="max-width:700px;">
  <h2>Create Post</h2>
  <form action="/posts/create" method="POST" enctype="multipart/form-data">
    <textarea name="caption" placeholder="What do you want to share?" rows="4"></textarea>
    <input type="file" name="media" accept="image/*,video/*,audio/*" />
    <button type="submit">Post</button>
  </form>
</div>

